<h1>Eat Da Burger</h1>

<h2>Let's eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-button devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger's Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <div class="form-group">
    <label for="burger_status">Purchase?</label><br>
    <input type="radio" name="status" value="0"> Yes!
  </div>

  <button type="submit">Add Burger</button>
</form>
